generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id       String @id @default(cuid())
  Name     String
  Email    String @unique
  Password String

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt

  @@map("users")
}

model Universidade {
  Id       String @id @default(cuid())
  Name     String
  Location String
  ZipCode  String
  Phone    String
  Email    String @unique

  Alunos Aluno[] // Uma universidade tem v√°rios alunos
}

model Aluno {
  Id         String   @id @default(cuid())
  Name       String
  Email      String   @unique
  Phone      String
  Address    String
  CreatedAt  DateTime @default(now())
  UpdatedAt  DateTime @updatedAt
  birthDate  DateTime
  SchoolYear String

  UniversidadeId String
  universidade   Universidade @relation(fields: [UniversidadeId], references: [Id])
}
